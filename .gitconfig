[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[user]
	name = Michael Sattler
	email = michael@sattlers.org
[push]
	default = simple
[core]
	excludesfile = /Users/msattler/.gitignore_global
	whitespace = tabwidth=4
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[diff]
	renames = copies
	mnemonicprefix = true
[branch]
	autosetupmerge = true
[merge]
	stat = true
    branch = auto
    diff = auto
    status = auto
[color]
	ui = auto
[color "branch"]
    current = red reverse
    local = blue
    remote = green
[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = green
    plain = white
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
